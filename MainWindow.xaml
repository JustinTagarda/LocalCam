<Window x:Class="LocalCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        Title="LocalCam - Viewer for Tapo Security Cameras"
        Height="760"
        Width="1160"
        MinHeight="620"
        MinWidth="980"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Icon="/Assets/security-camera.ico"
        StateChanged="Window_StateChanged"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <SolidColorBrush x:Key="TitleBarIconBrush" Color="#E8EEF5" />

        <Style x:Key="TitleBarControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="52" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#313741" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3A4452" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="52" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,6,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E81123" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#C50F1F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PanelTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#0F1624" />
            <Setter Property="Foreground" Value="#E8EEF5" />
            <Setter Property="BorderBrush" Value="#34405A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="PanelButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E8EEF5" />
            <Setter Property="Background" Value="#26364D" />
            <Setter Property="BorderBrush" Value="#365070" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#304665" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#37557A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0"
            Background="#161B25"
            BorderBrush="#2A3242"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#101722"
                    CornerRadius="6,6,0,0"
                    Height="42"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <Image Source="/Assets/security-camera.png" Width="18" Height="18" Margin="0,0,8,0" />
                        <TextBlock Text="LocalCam - Viewer for Tapo Security Cameras"
                                   Foreground="#E8EEF5"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton"
                                Style="{StaticResource TitleBarControlButtonStyle}"
                                Click="MinimizeButton_Click">
                            <Path Data="M2,6 L12,6"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.4"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square" />
                        </Button>
                        <Button x:Name="MaximizeRestoreButton"
                                Style="{StaticResource TitleBarControlButtonStyle}"
                                Click="MaximizeRestoreButton_Click">
                            <Path x:Name="MaximizeIconPath"
                                  Data="M2,2 L12,2 12,12 2,12 Z"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.3"
                                  Fill="Transparent"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square"
                                  StrokeLineJoin="Miter" />
                        </Button>
                        <Button x:Name="CloseButton"
                                Style="{StaticResource TitleBarCloseButtonStyle}"
                                Click="CloseButton_Click">
                            <Path Data="M2,2 L12,12 M12,2 L2,12"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.4"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#1B2231"
                        BorderBrush="#2D3648"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <WrapPanel Grid.Row="0" VerticalAlignment="Center">
                            <TextBlock Text="RTSP Username"
                                       Foreground="#A9B4C7"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBox x:Name="RtspUsernameTextBox"
                                     Style="{StaticResource PanelTextBoxStyle}"
                                     Width="140"
                                     Margin="0,0,12,0" />

                            <TextBlock Text="RTSP Password"
                                       Foreground="#A9B4C7"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <PasswordBox x:Name="RtspPasswordBox"
                                         Width="160"
                                         Height="28"
                                         Background="#0F1624"
                                         Foreground="#E8EEF5"
                                         BorderBrush="#34405A"
                                         BorderThickness="1"
                                         Padding="8,4"
                                         Margin="0,0,12,0" />

                            <TextBlock Text="Stream Path"
                                       Foreground="#A9B4C7"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBox x:Name="StreamPathTextBox"
                                     Style="{StaticResource PanelTextBoxStyle}"
                                     Width="100"
                                     Text="stream1"
                                     Margin="0,0,12,0" />

                            <Button x:Name="StartStreamsButton"
                                    Style="{StaticResource PanelButtonStyle}"
                                    Content="Start Streams"
                                    Width="112"
                                    Height="30"
                                    Margin="0,0,8,0"
                                    Click="StartStreamsButton_Click" />
                            <Button x:Name="StopStreamsButton"
                                    Style="{StaticResource PanelButtonStyle}"
                                    Content="Stop"
                                    Width="72"
                                    Height="30"
                                    Click="StopStreamsButton_Click" />
                        </WrapPanel>

                        <TextBlock x:Name="StreamingStatusText"
                                   Grid.Row="1"
                                   Margin="0,8,0,0"
                                   Foreground="#8FA2BE"
                                   TextWrapping="Wrap"
                                   Text="Detected cameras are ready. Enter RTSP credentials to start live streaming." />
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="0,0,6,6">
                        <Grid>
                            <vlc:VideoView x:Name="VideoView1" />
                            <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" Padding="6,3" Background="#880B0F17" CornerRadius="4">
                                <TextBlock x:Name="CameraTile1Label" Foreground="#E4ECF7" FontSize="13" Text="camera 1" />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="6,0,0,6">
                        <Grid>
                            <vlc:VideoView x:Name="VideoView2" />
                            <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" Padding="6,3" Background="#880B0F17" CornerRadius="4">
                                <TextBlock x:Name="CameraTile2Label" Foreground="#E4ECF7" FontSize="13" Text="camera 2" />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="0,6,6,0">
                        <Grid>
                            <vlc:VideoView x:Name="VideoView3" />
                            <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" Padding="6,3" Background="#880B0F17" CornerRadius="4">
                                <TextBlock x:Name="CameraTile3Label" Foreground="#E4ECF7" FontSize="13" Text="camera 3" />
                            </Border>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="6,6,0,0">
                        <Grid>
                            <vlc:VideoView x:Name="VideoView4" />
                            <Border VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" Padding="6,3" Background="#880B0F17" CornerRadius="4">
                                <TextBlock x:Name="CameraTile4Label" Foreground="#E4ECF7" FontSize="13" Text="camera 4" />
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
