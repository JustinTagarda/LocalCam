<Window x:Class="LocalCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LocalCam - Viewer for Tapo Security Cameras"
        Height="760"
        Width="1160"
        MinHeight="620"
        MinWidth="980"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Icon="/Assets/security-camera.ico"
        StateChanged="Window_StateChanged"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <SolidColorBrush x:Key="TitleBarIconBrush" Color="#E8EEF5" />

        <Style x:Key="TitleBarControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="52" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#313741" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3A4452" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="52" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,6,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E81123" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#C50F1F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Margin="0"
            Background="#161B25"
            BorderBrush="#2A3242"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="#101722"
                    CornerRadius="6,6,0,0"
                    Height="42"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <Image Source="/Assets/security-camera.png" Width="18" Height="18" Margin="0,0,8,0" />
                        <TextBlock Text="LocalCam - Viewer for Tapo Security Cameras"
                                   Foreground="#E8EEF5"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton"
                                Style="{StaticResource TitleBarControlButtonStyle}"
                                Click="MinimizeButton_Click">
                            <Path Data="M2,6 L12,6"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.4"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square" />
                        </Button>
                        <Button x:Name="MaximizeRestoreButton"
                                Style="{StaticResource TitleBarControlButtonStyle}"
                                Click="MaximizeRestoreButton_Click">
                            <Path x:Name="MaximizeIconPath"
                                  Data="M2,2 L12,2 12,12 2,12 Z"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.3"
                                  Fill="Transparent"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square"
                                  StrokeLineJoin="Miter" />
                        </Button>
                        <Button x:Name="CloseButton"
                                Style="{StaticResource TitleBarCloseButtonStyle}"
                                Click="CloseButton_Click">
                            <Path Data="M2,2 L12,12 M12,2 L2,12"
                                  Stroke="{StaticResource TitleBarIconBrush}"
                                  StrokeThickness="1.4"
                                  StrokeStartLineCap="Square"
                                  StrokeEndLineCap="Square" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Live camera feeds"
                           Margin="2,0,0,10"
                           Foreground="#A9B4C7"
                           FontSize="13" />

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="0,0,6,6">
                        <TextBlock x:Name="CameraTile1"
                                   Margin="12"
                                   VerticalAlignment="Top"
                                   Foreground="#E4ECF7"
                                   FontSize="14"
                                   Text="camera 1 - live streaming" />
                    </Border>

                    <Border Grid.Row="0" Grid.Column="1" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="6,0,0,6">
                        <TextBlock x:Name="CameraTile2"
                                   Margin="12"
                                   VerticalAlignment="Top"
                                   Foreground="#E4ECF7"
                                   FontSize="14"
                                   Text="camera 2 - live streaming" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="0" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="0,6,6,0">
                        <TextBlock x:Name="CameraTile3"
                                   Margin="12"
                                   VerticalAlignment="Top"
                                   Foreground="#E4ECF7"
                                   FontSize="14"
                                   Text="camera 3 - live streaming" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" Background="#202736" BorderBrush="#2D3648" BorderThickness="1" CornerRadius="8" Margin="6,6,0,0">
                        <TextBlock x:Name="CameraTile4"
                                   Margin="12"
                                   VerticalAlignment="Top"
                                   Foreground="#E4ECF7"
                                   FontSize="14"
                                   Text="camera 4 - live streaming" />
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
