<Window x:Class="LocalCam.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LocalCam"
        Height="680"
        Width="1040"
        MinHeight="560"
        MinWidth="860"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        Icon="/Assets/security-camera.ico"
        ShowInTaskbar="True"
        Loaded="Window_Loaded"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <SolidColorBrush x:Key="TitleBarIconBrush" Color="#E8EEF5" />

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="52" />
            <Setter Property="Height" Value="42" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="0,6,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#E81123" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#C50F1F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E8EEF5" />
            <Setter Property="Background" Value="#26364D" />
            <Setter Property="BorderBrush" Value="#365070" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#304665" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#37557A" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#1C2533" />
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2A3446" />
                                <Setter Property="Foreground" Value="#7D8EA7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DiagnosticsGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#111826" />
            <Setter Property="Foreground" Value="#DCE7F5" />
            <Setter Property="BorderBrush" Value="#2F3A51" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="#1A2230" />
            <Setter Property="AlternatingRowBackground" Value="#1D2737" />
            <Setter Property="HorizontalGridLinesBrush" Value="#2E3B53" />
            <Setter Property="VerticalGridLinesBrush" Value="#2A3348" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E2A3D" />
            <Setter Property="Foreground" Value="#D9E4F3" />
            <Setter Property="BorderBrush" Value="#2F3A51" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Window.Resources>

    <Border Margin="0"
            Background="#161B25"
            BorderBrush="#2A3242"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Height="42"
                    Background="#101722"
                    CornerRadius="6,6,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                        <Image Source="/Assets/security-camera.png" Width="16" Height="16" Margin="0,0,8,0" />
                        <TextBlock Text="LocalCam"
                                   Foreground="#E8EEF5"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{StaticResource TitleBarCloseButtonStyle}"
                            Click="StartupCloseButton_Click">
                        <Path Data="M2,2 L12,12 M12,2 L2,12"
                              Stroke="{StaticResource TitleBarIconBrush}"
                              StrokeThickness="1.4"
                              StrokeStartLineCap="Square"
                              StrokeEndLineCap="Square" />
                    </Button>
                </Grid>
            </Border>

            <TextBlock x:Name="StatusText"
                       Grid.Row="1"
                       Text="Scanning network for TAPO cameras... please wait."
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Foreground="#DBE5F2"
                       Margin="22,16,22,10" />

            <ProgressBar x:Name="ScanProgress"
                         Grid.Row="1"
                         VerticalAlignment="Bottom"
                         Height="14"
                         Margin="22,0,22,14"
                         IsIndeterminate="True"
                         Foreground="#74E5B1"
                         Background="#243044" />

            <Border Grid.Row="2"
                    Margin="22,0,22,10"
                    Padding="10"
                    Background="#1B2231"
                    BorderBrush="#2D3648"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Scan Diagnostics"
                               Foreground="#DCE7F5"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Margin="0,0,0,6" />

                    <StackPanel Grid.Row="1" Margin="0,0,0,8">
                        <TextBlock x:Name="DiagnosticsSummaryText"
                                   Text="Scan diagnostics will appear here."
                                   Foreground="#9FB0C9"
                                   TextWrapping="Wrap" />
                        <TextBlock x:Name="DiagnosticsSubnetsText"
                                   Margin="0,4,0,0"
                                   Text="Scanned subnets: pending."
                                   Foreground="#8FA2BE"
                                   TextWrapping="Wrap" />
                    </StackPanel>

                    <DataGrid x:Name="DiagnosticsCandidateGrid"
                              Grid.Row="2"
                              Style="{StaticResource DiagnosticsGridStyle}"
                              Margin="0"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="IP" Binding="{Binding IpAddress}" Width="130" />
                            <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="70" />
                            <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="60" />
                            <DataGridTextColumn Header="Ports" Binding="{Binding OpenPorts}" Width="130" />
                            <DataGridTextColumn Header="ONVIF" Binding="{Binding Onvif}" Width="58" />
                            <DataGridTextColumn Header="Tapo UDP" Binding="{Binding TapoUdp}" Width="76" />
                            <DataGridTextColumn Header="Tapo Ucast" Binding="{Binding TapoUnicast}" Width="82" />
                            <DataGridTextColumn Header="ARP" Binding="{Binding Arp}" Width="50" />
                            <DataGridTextColumn Header="Hostname" Binding="{Binding HostName}" Width="170" />
                            <DataGridTextColumn Header="MAC" Binding="{Binding MacAddress}" Width="130" />
                            <DataGridTextColumn Header="Why Pass/Fail" Binding="{Binding Reason}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,16">
                <Button x:Name="ScanAgainButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Content="Scan again"
                        Width="92"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="ScanAgainButton_Click"
                        IsEnabled="False" />
                <Button x:Name="ExitButton"
                        Style="{StaticResource ActionButtonStyle}"
                        Content="Exit"
                        Width="64"
                        Height="30"
                        Click="ExitButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
